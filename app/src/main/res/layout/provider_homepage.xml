<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/pullToRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/backgroundcolor">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome , here are some requests:"
        android:padding="16dp"
       />



    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/provider_pending_services_listview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        tools:context="com.example.android.miwok.wordlist"
        android:layout_height="0dp"
        android:layout_weight="10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:background="@color/browser_actions_divider_color"
            android:id="@+id/myServices_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="goToMyServicesPage"
            android:clickable="true"
            android:src="@drawable/my_services"/>

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/profile_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/browser_actions_divider_color"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fui_ic_anonymous_white_24dp" />


    </LinearLayout>
</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
