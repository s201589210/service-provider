<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/profile_imge"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/dyer" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_imge"
                android:layout_centerInParent="true"
                android:text="USER NAME"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:text="3">


            <TextView
                android:id="@+id/first_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/last_name_label"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:text="First Name:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/phone_nubmer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/phoneTextView"
                android:padding="10dp"
                android:text="Phone:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/rating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/phoneTextView"
                android:layout_marginEnd="86dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="64dp"
                android:padding="10dp"
                android:text="Rate:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/last_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/city_label"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:text="Last name:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/city_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="City:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/firstNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/first_name_label"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="Fname" />

            <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/cityTextView"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="phone" />

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/firstNameTextView"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="city" />

            <TextView
                android:id="@+id/lastNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/first_name_label"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="Lname" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rating_label"
                android:layout_centerHorizontal="true" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>