<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:id="@+id/edit_profile_linear_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimarySuperDark"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="166dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="149dp"
                android:src="@drawable/dyer"
                app:civ_border_color="#bbdefb"
                app:civ_border_width="2dp" />

            <Button
                android:id="@+id/imgUpld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="107dp"
                android:layout_toEndOf="@+id/imgEdt"
                android:text="Upload"
                android:visibility="invisible" />

            <Button
                android:id="@+id/imgEdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_alignParentStart="true"
                android:layout_marginStart="126dp"
                android:layout_marginTop="4dp"
                android:text="Edit" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:text="3"
            android:background="@color/backgroundcolor">


            <TextView
                android:id="@+id/edit_profile_first_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/edit_profile_last_name_label"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:text="First Name:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/edit_profile_phone_nubmer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/edit_profile_phone_edit_text"
                android:padding="10dp"
                android:text="Phone:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/edit_profile_last_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/edit_profile_city_label"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:text="Last name:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/edit_profile_city_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="City:"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/edit_profile_first_name_edit_text"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/edit_profile_first_name_label"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:padding="10dp"
                android:maxLines="1"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description_text_view" />




            <EditText
                android:id="@+id/edit_profile_phone_edit_text"
                android:layout_below="@id/edit_profile_city_edit_text"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="phone" />

            <EditText
                android:id="@+id/edit_profile_city_edit_text"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                tools:text="city" />

            <EditText
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:id="@+id/edit_profile_last_name_edit_text"
                android:layout_below="@id/edit_profile_first_name_label"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="Lname" />

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>