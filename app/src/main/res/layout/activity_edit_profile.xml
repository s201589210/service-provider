<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:id="@+id/edit_profile_linear_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/edit_profile_profile_imge"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/dyer" />

            <TextView
                android:id="@+id/edit_profile_email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_profile_profile_imge"
                android:layout_centerInParent="true"
                android:text="USER NAME"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:text="3">


            <TextView
                android:id="@+id/edit_profile_first_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/edit_profile_last_name_label"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:text="First Name:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/edit_profile_phone_nubmer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/edit_profile_phone_edit_text"
                android:padding="10dp"
                android:text="Phone:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/edit_profile_last_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/edit_profile_city_label"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:text="Last name:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/edit_profile_city_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="City:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_profile_first_name_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/edit_profile_first_name_label"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="Fname" />

            <EditText
                android:id="@+id/edit_profile_phone_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/edit_profile_city_edit_text"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="phone" />

            <EditText
                android:id="@+id/edit_profile_city_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="city" />

            <EditText
                android:id="@+id/edit_profile_last_name_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/edit_profile_first_name_label"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="20dp"
                tools:text="Lname" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:text="save changes"
                android:onClick="saveChanges"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>